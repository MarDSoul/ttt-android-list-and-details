<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <ImageView
        android:id="@+id/details_avatar_image"
        android:layout_width="@dimen/avatar_detail_size"
        android:layout_height="@dimen/avatar_detail_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/details_avatar_image"
        app:layout_constraintStart_toEndOf="@id/details_avatar_image"
        app:layout_constraintTop_toTopOf="@id/details_avatar_image"
        tools:text="GitHub login" />

    <TextView
        android:id="@+id/details_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_name_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_avatar_image" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_no_name"
        app:layout_constraintStart_toEndOf="@id/details_name_label"
        app:layout_constraintTop_toTopOf="@id/details_name_label" />

    <TextView
        android:id="@+id/details_created_at_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_created_at_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_name_label" />

    <TextView
        android:id="@+id/created_at_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/details_created_at_label"
        app:layout_constraintTop_toTopOf="@id/details_created_at_label"
        tools:text="details_created_at" />

    <TextView
        android:id="@+id/details_location_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_location_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_created_at_label" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_no_location"
        app:layout_constraintStart_toEndOf="@id/details_location_label"
        app:layout_constraintTop_toTopOf="@id/details_location_label" />

    <TextView
        android:id="@+id/repo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_repos_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_location_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/repos_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0.dp"
        android:tag="repos_list"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/repo_label" />

    <include
        android:id="@+id/loading_layout"
        layout="@layout/layout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_avatar_image" />

</androidx.constraintlayout.widget.ConstraintLayout>